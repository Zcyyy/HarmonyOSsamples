<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:play_music_root"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$media:bg_blurry"
    ohos:orientation="vertical">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:orientation="vertical"
        ohos:top_margin="50vp">

        <Text
            ohos:id="$+id:music_name"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:bottom_margin="10vp"
            ohos:text="$string:music_name"
            ohos:text_alignment="center"
            ohos:text_color="#FFFFFF"
            ohos:text_size="34fp"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="0vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:weight="1">

        <Image
            ohos:id="$+id:music_posters"
            ohos:height="match_content"
            ohos:image_src="$media:album"
            ohos:width="match_content"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:progress_container"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:start_margin="20vp"
        ohos:orientation="vertical"
        ohos:end_margin="20vp"
        ohos:top_margin="37.25vp">

        <DirectionalLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:play_progress_time"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="vertical_center"
                ohos:end_margin="10vp"
                ohos:start_margin="0vp"
                ohos:text="$string:play_time"
                ohos:text_alignment="center"
                ohos:text_color="#FFCCE7FF"
                ohos:text_size="13vp"/>

            <Text
                ohos:height="match_content"
                ohos:width="0vp"
                ohos:weight="1"/>

            <Text
                ohos:id="$+id:play_total_time"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="vertical_center"
                ohos:end_margin="10vp"
                ohos:start_margin="0vp"
                ohos:text="$string:play_time"
                ohos:text_alignment="center"
                ohos:text_color="#FFCCE7FF"
                ohos:text_size="13vp"/>
        </DirectionalLayout>

        <Slider
            ohos:id="$+id:play_progress_bar"
            ohos:height="14vp"
            ohos:width="match_parent"
            ohos:background_instruct_element="#64CCE7FF"
            ohos:layout_alignment="vertical_center"
            ohos:progress_color="#FFCCE7FF"
            ohos:weight="1"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:music_play_control_container"
        ohos:height="72vp"
        ohos:width="match_parent"
        ohos:bottom_margin="80vp"
        ohos:start_padding="10vp"
        ohos:orientation="horizontal"
        ohos:end_padding="10vp"
        ohos:top_margin="40vp">

        <DirectionalLayout
            ohos:id="$+id:control_box"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">

            <Image
                ohos:id="$+id:remote_play"
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:background_element="$graphic:button_bg"
                ohos:image_src="$media:remote_play_selected"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:control_box2"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">

            <Image
                ohos:id="$+id:music_play_prev_btn"
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:background_element="$graphic:button_bg"
                ohos:image_src="$media:ic_himusic_previous"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:control_box3"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">

            <Image
                ohos:id="$+id:music_play_btn"
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:background_element="$graphic:button_bg"
                ohos:image_src="$media:ic_himusic_play"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:control_box4"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:orientation="vertical"
            ohos:weight="1">

            <Image
                ohos:id="$+id:music_play_next_btn"
                ohos:height="48vp"
                ohos:width="48vp"
                ohos:background_element="$graphic:button_bg"
                ohos:image_src="$media:ic_himusic_next"
                ohos:layout_alignment="center"
                ohos:scale_mode="inside"/>
        </DirectionalLayout>

    </DirectionalLayout>
</DirectionalLayout>
