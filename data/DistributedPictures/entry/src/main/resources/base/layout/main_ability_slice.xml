<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:main_root"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="30vp">

    <DependentLayout
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$graphic:bg"
        ohos:padding="10vp"
        ohos:top_margin="20vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="8vp"
            ohos:text="$string:local_pictures"
            ohos:text_size="15fp"/>

        <Image
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:align_parent_right="true"
            ohos:image_src="$media:icon"
            ohos:start_margin="0px"
            ohos:end_margin="30vp"/>

    </DependentLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:top_margin="20vp">

        <Button
            ohos:id="$+id:save_to_distributed_dir"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="#55000055"
            ohos:padding="5vp"
            ohos:text="$string:share_to_distributed_dir"
            ohos:text_size="15fp"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal"
            ohos:top_margin="10vp">

            <Button
                ohos:id="$+id:read_from_distributed_dir"
                ohos:height="match_content"
                ohos:width="0vp"
                ohos:background_element="#55000055"
                ohos:padding="5vp"
                ohos:text="$string:refresh"
                ohos:text_size="15fp"
                ohos:weight="1"/>

            <Button
                ohos:id="$+id:delete_distributed_dir"
                ohos:height="match_content"
                ohos:width="0vp"
                ohos:background_element="#55000055"
                ohos:start_margin="10vp"
                ohos:end_margin="0px"
                ohos:padding="5vp"
                ohos:text="$string:delete"
                ohos:text_size="15fp"
                ohos:weight="1"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <DependentLayout
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="$graphic:bg"
        ohos:padding="10vp"
        ohos:top_margin="20vp">

        <Text
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:padding="8vp"
            ohos:text="$string:remote_picture"
            ohos:text_size="15fp"/>

        <Image
            ohos:id="$+id:remote_image"
            ohos:height="60vp"
            ohos:width="60vp"
            ohos:align_parent_right="true"
            ohos:start_margin="0px"
            ohos:end_margin="30vp"/>
    </DependentLayout>
</DirectionalLayout>