<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="white"
    ohos:orientation="vertical">

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_margin="137px"
        ohos:orientation="horizontal">
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_margin="70px"
            ohos:end_margin="0vp"
            ohos:orientation="vertical">
            <Image
                ohos:id="$+id:img_me"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:start_margin="60px"
                ohos:end_margin="0vp"
                ohos:scale_mode="zoom_center"/>
        </DirectionalLayout>
        <DirectionalLayout
            xmlns:ohos="http://schemas.huawei.com/res/ohos"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:start_padding="450px"
            ohos:end_padding="0vp"
            ohos:background_element="white"
            ohos:orientation="vertical">
            <Image
                ohos:id="$+id:img_dv"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:layout_alignment="horizontal_center"
                ohos:scale_mode="zoom_center"/>
        </DirectionalLayout>

    </DirectionalLayout>

    <TableLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:id ="$+id:table_Layout"
        ohos:width="960px"
        ohos:height="960px"
        ohos:top_margin="233px"
        ohos:start_margin="60px"
        ohos:end_margin="0vp"
        ohos:background_element="#DEDEDE"
        ohos:alignment_type="align_edges"
        ohos:row_count="3"
        ohos:column_count="3">

        <Image
            ohos:id="$+id:img1"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            />

        <Image
            ohos:id="$+id:img2"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            ohos:start_margin="6px"
            ohos:end_margin="0px"
            />
        <Image
            ohos:id="$+id:img3"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            ohos:start_margin="6px"
            ohos:end_margin="0px"
            />

        <Image
            ohos:id="$+id:img4"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            ohos:top_margin="6px"
            />

        <Image
            ohos:id="$+id:img5"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            ohos:top_margin="6px"
            ohos:start_margin="6px"
            ohos:end_margin="0px"
            />

        <Image
            ohos:id="$+id:img6"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            ohos:top_margin="6px"
            ohos:start_margin="6px"
            ohos:end_margin="0px"
            />

        <Image
            ohos:id="$+id:img7"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            ohos:top_margin="6px"
            />
        <Image
            ohos:id="$+id:img8"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            ohos:top_margin="6px"
            ohos:start_margin="6px"
            ohos:end_margin="0px"
            />

        <Image
            ohos:id="$+id:img9"
            ohos:height="316px"
            ohos:width="316px"
            ohos:background_element="#FFFFFF"
            ohos:top_margin="6px"
            ohos:start_margin="6px"
            ohos:end_margin="0px"
            />
    </TableLayout>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:top_padding="140px"
        ohos:orientation="horizontal">
        <Image
            ohos:id="$+id:img_back"
            ohos:height="137px"
            ohos:width="137px"
            ohos:top_margin="6px"
            ohos:start_margin="48px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_back"
            ohos:scale_mode="zoom_center"
            ohos:layout_alignment="vertical_center"/>
        <RoundProgressBar
            ohos:id="$+id:round_progress_bar"
            ohos:height="240px"
            ohos:width="240px"
            ohos:start_margin="250px"
            ohos:end_margin="0px"
            ohos:max="10"
            ohos:min="0"
            ohos:progress_width="25px"
            ohos:progress_hint_text="$string:num0"
            ohos:progress_hint_text_size="80px"
            ohos:progress_hint_text_color="#00BAFF"
            ohos:progress="0"
            ohos:progress_color="#25B3FE"/>
        <Image
            ohos:id="$+id:img_refresh"
            ohos:height="137px"
            ohos:width="137px"
            ohos:top_margin="6px"
            ohos:start_margin="200px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_refresh"
            ohos:scale_mode="zoom_center"
            ohos:layout_alignment="vertical_center"/>
    </DirectionalLayout>
</DirectionalLayout>
