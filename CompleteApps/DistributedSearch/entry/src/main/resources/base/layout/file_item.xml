<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="60vp"
    ohos:width="360vp"
    ohos:background_element="#FFFFFF"
    ohos:orientation="vertical"
    >
    <DirectionalLayout
        ohos:height="58vp"
        ohos:width="720vp"
        ohos:orientation="horizontal"
        >
        <Image
            ohos:height="58vp"
            ohos:width="58vp"
            ohos:id="$+id:imageIcon"
            ohos:layout_alignment="vertical_center"
            />
        <DirectionalLayout
            ohos:height="58vp"
            ohos:width="300vp"
            ohos:orientation="vertical"
            >
            <Text
                ohos:height="32vp"
                ohos:width="300vp"
                ohos:id="$+id:filename"
                ohos:italic="true"
                ohos:text_size="20vp"
                ohos:text_color="#000000"
                ohos:truncation_mode="ellipsis_at_end"
                ohos:text_alignment="vertical_center"
                />
            <Text
                ohos:height="20vp"
                ohos:width="280vp"
                ohos:id="$+id:deviceinfo"
                ohos:italic="true"
                ohos:text_size="12vp"
                ohos:text_color="#808080"
                ohos:truncation_mode="ellipsis_at_end"
                ohos:text_alignment="vertical_center"
                />
        </DirectionalLayout>
    </DirectionalLayout>
    <Component
        ohos:pivot_x="0vp"
        ohos:pivot_y="78vp"
        ohos:height="2vp"
        ohos:width="344vp"
        ohos:start_padding="8vp"
        ohos:end_padding="0vp"
        ohos:start_margin="8vp"
        ohos:end_margin="0vp"
        ohos:background_element="#E9E9E9"/>
</DirectionalLayout>
