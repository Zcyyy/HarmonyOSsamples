<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="70vp"
    ohos:width="match_parent"
    ohos:orientation="horizontal">
    <DirectionalLayout
        ohos:height="70vp"
        ohos:width="50vp"
        ohos:orientation="vertical"
        >
        <Image
            ohos:id="$+id:item_type"
            ohos:height="45vp"
            ohos:width="50vp"
            ohos:layout_alignment="vertical_center"
            ohos:start_margin="10vp"
            ohos:end_margin="0vp"
            ohos:scale_mode="inside"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="70vp"
        ohos:width="200vp"
        ohos:orientation="vertical"
        >
        <Text
            ohos:id="$+id:item_image_title"
            ohos:height="24vp"
            ohos:width="200vp"
            ohos:max_text_lines="1"
            ohos:start_margin="8vp"
            ohos:end_margin="0vp"
            ohos:text_alignment="bottom"
            ohos:text_size="16vp"
            />
        <Text
            ohos:id="$+id:item_image_info"
            ohos:height="35vp"
            ohos:width="100vp"
            ohos:start_margin="8vp"
            ohos:end_margin="0vp"
            ohos:max_text_lines="1"
            ohos:text_alignment="top"
            ohos:text_size="12vp"
            ohos:italic="true"
            ohos:truncation_mode="ellipsis_at_middle"
            />
    </DirectionalLayout>
</DirectionalLayout>