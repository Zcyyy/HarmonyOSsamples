<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:id="$+id:parent_layout"
        ohos:width="match_parent"
        ohos:height="match_parent">

    <ScrollView
        ohos:weight="1"
        ohos:width="match_parent"
        ohos:height="match_parent">
        <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="vertical">
            <StackLayout
                ohos:height="match_parent"
                ohos:width="match_parent">

                <Image
                    ohos:id="$+id:image_content"
                    ohos:width="match_parent"
                    ohos:scale_mode="stretch"
                    ohos:height="300vp"
                    ohos:top_margin="3vp"/>
                <!--
                <Image
                    ohos:id="$+id:image_shoppingCart"
                    ohos:height="72px"
                    ohos:width="72px"
                    ohos:scale_mode="stretch"
                    ohos:top_margin="20px"
                    ohos:right_margin="20px"
                    ohos:layout_alignment="right"
                    ohos:image_src="$media:icon_gouwuche"
                    />
                    -->
            </StackLayout>
            <Text
                ohos:id="$+id:product_price"
                ohos:height="match_content"
                ohos:width="280px"
                ohos:below="$id:image_content"
                ohos:top_margin="20px"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:text_color="red"
                ohos:text_size="18vp"
                ohos:weight="6"/>

            <Text
                ohos:id="$+id:title_content"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:below="$id:product_price"
                ohos:text_alignment="left"
                ohos:multiple_lines="true"
                ohos:top_margin="20px"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:text_size="16vp"/>
            <Text
                ohos:id="$+id:title_other_content"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:below="$id:title_content"
                ohos:multiple_lines="true"
                ohos:top_margin="20px"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:text_size="12vp"
                ohos:text_alignment="left"/>
            <DependentLayout
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:margin="20px">
                <Text
                    ohos:id="$+id:title_head_param"
                    ohos:width="260px"
                    ohos:height="match_content"
                    ohos:text="$string:specifications_label"
                    ohos:text_size="18vp"/>
                <Text
                    ohos:id="$+id:item_param"
                    ohos:height="match_content"
                    ohos:width="500px"
                    ohos:right_of="$id:title_head_param"
                    ohos:text_size="12vp"
                    ohos:weight="2"/>
                <Text
                    ohos:id="$+id:item_param2"
                    ohos:height="match_content"
                    ohos:width="500px"
                    ohos:right_of="$id:title_head_param"
                    ohos:below="$id:item_param"
                    ohos:text_color="#FFCBCBD2"
                    ohos:text_size="12vp"
                    ohos:weight="2"/>
            </DependentLayout>
            <DependentLayout
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:margin="20px">
                <Text
                    ohos:id="$+id:item_head_discount"
                    ohos:height="match_content"
                    ohos:width="260px"
                    ohos:text="$string:discount"
                    ohos:text_size="18vp"/>
                <Text
                    ohos:id="$+id:item_discount"
                    ohos:height="match_content"
                    ohos:width="200px"
                    ohos:right_of="$id:item_head_discount"
                    ohos:background_element="$graphic:corner_bg_text"
                    ohos:start_padding="5px"
                    ohos:end_padding="0px"
                    ohos:text_color="red"
                    ohos:text_size="12vp"
                    ohos:weight="3"/>
            </DependentLayout>
            <Component
                ohos:height="0.5vp"
                ohos:width="match_parent"
                ohos:align_left="$id:item_news_image"
                ohos:background_element="#EAEAEC"
                />
            <DependentLayout
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:margin="20px">
                <Text
                    ohos:id="$+id:item_head_activety"
                    ohos:width="260px"
                    ohos:height="match_content"
                    ohos:text="$string:activity_label"
                    ohos:text_size="18vp"/>
                <Text
                    ohos:id="$+id:item_activety"
                    ohos:height="match_content"
                    ohos:width="350px"
                    ohos:right_of="$id:item_head_activety"
                    ohos:start_padding="5px"
                    ohos:end_padding="0px"
                    ohos:text_color="red"
                    ohos:text="$string:activity_618_label"
                    ohos:text_size="16vp"
                    ohos:weight="5"/>
            </DependentLayout>
        </DirectionalLayout>
    </ScrollView>
    <DirectionalLayout
        ohos:height="140px"
        ohos:width="match_parent"
        ohos:background_element="#FAFAFA"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal">
        <Image
            ohos:top_margin="30px"
            ohos:height="72px"
            ohos:width="72px"
            ohos:start_margin="40px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_dianpu"/>
        <Image
            ohos:top_margin="30px"
            ohos:height="72px"
            ohos:width="72px"
            ohos:start_margin="145px"
            ohos:end_margin="0px"
            ohos:image_src="$media:service"/>
        <StackLayout
            ohos:height="match_parent"
            ohos:width="100px"
            ohos:id="$+id:car_shoppingcart_layout"
            ohos:start_margin="145px"
            ohos:end_margin="0px">
            <Text
                ohos:id="$+id:cart_num_detail"
                ohos:height="40px"
                ohos:width="40px"
                ohos:text=""
                ohos:top_margin="20px"
                ohos:start_margin="30px"
                ohos:end_margin="0px"
                ohos:text_color="red"
                ohos:background_element="$graphic:red_circel_button"
                ohos:text_alignment="center"
                ohos:text_size="10vp"
                ohos:weight="6vp"/>
            <Image
                ohos:id="$+id:image_shoppingCart"
                ohos:top_margin="35px"
                ohos:height="72px"
                ohos:width="72px"
                ohos:image_src="$media:icon_gouwuche_bot"/>
        </StackLayout>
        <Text
            ohos:id="$+id:add_product"
            ohos:width="200px"
            ohos:height="110px"
            ohos:background_element="$graphic:corner_bg_comment"
            ohos:text_alignment="center"
            ohos:start_margin="70px"
            ohos:end_margin="20px"
            ohos:top_margin="20px"
            ohos:text_color="white"
            ohos:text_size="20vp"
            ohos:text="$string:add_cart_label"
            ohos:weight="6"/>
    </DirectionalLayout>
</DependentLayout>