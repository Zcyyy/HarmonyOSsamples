<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="110vp"
    ohos:width="match_parent"
    ohos:orientation="vertical">
        <DependentLayout
            ohos:height="match_parent"
            ohos:width="match_parent"
            ohos:padding="5px">
            <Image
                ohos:id="$+id:pro_select"
                ohos:height="54px"
                ohos:width="54px"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:top_margin="148px"
                ohos:image_src="$media:icon_select"/>
            <Image
                ohos:id="$+id:item_pro_image"
                ohos:height="360px"
                ohos:width="360px"
                ohos:margin="10px"
                ohos:right_of="$id:pro_select"
                ohos:scale_mode="inside"/>
            <Text
                ohos:id="$+id:item_pro_title"
                ohos:height="match_content"
                ohos:width="700px"
                ohos:right_of="$id:item_pro_image"
                ohos:max_text_lines="2"
                ohos:multiple_lines="true"
                ohos:text_size="14vp"
                ohos:weight="4"/>
            <Text
                ohos:id="$+id:item_pro_param"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:item_pro_title"
                ohos:right_of="$id:item_pro_image"
                ohos:text_size="12vp"
                ohos:weight="2"/>
            <Text
                ohos:id="$+id:item_pro_param2"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:below="$id:item_pro_param"
                ohos:right_of="$id:item_pro_image"
                ohos:text_color="#FFCBCBD2"
                ohos:text_size="12vp"
                ohos:weight="2"/>
            <Text
                ohos:id="$+id:item_pro_price"
                ohos:height="match_content"
                ohos:width="240px"
                ohos:below="$id:item_pro_param2"
                ohos:right_of="$id:item_pro_image"
                ohos:text_color="red"
                ohos:text_size="16vp"
                ohos:weight="4"/>
            <Image
                ohos:id="$+id:item_pro_dec"
                ohos:height="72px"
                ohos:width="72px"
                ohos:start_margin="30px"
                ohos:end_margin="0px"
                ohos:image_src="$media:icon_jian_hui"
                ohos:below="$id:item_pro_param2"
                ohos:right_of="$id:item_pro_price"/>
            <Text
                ohos:id="$+id:item_pro_num"
                ohos:height="match_content"
                ohos:width="60px"
                ohos:below="$id:item_pro_param2"
                ohos:start_margin="30px"
                ohos:end_margin="0px"
                ohos:right_of="$id:item_pro_dec"
                ohos:text_size="16vp"
                ohos:text_alignment="center"
                ohos:text="$string:num1"
                ohos:weight="4"/>
            <Image
                ohos:id="$+id:item_pro_plus"
                ohos:height="72px"
                ohos:width="72px"
                ohos:start_margin="30px"
                ohos:end_margin="0px"
                ohos:image_src="$media:icon_jia"
                ohos:below="$id:item_pro_param2"
                ohos:right_of="$id:item_pro_num"/>
            <Text
                ohos:id="$+id:item_pro_discount"
                ohos:height="match_content"
                ohos:width="200px"
                ohos:below="$id:item_pro_price"
                ohos:right_of="$id:item_pro_image"
                ohos:background_element="$graphic:corner_bg_text"
                ohos:start_padding="5px"
                ohos:end_padding="0px"
                ohos:text_color="red"
                ohos:text_size="12vp"
                ohos:weight="3"/>
            <Component
                ohos:height="0.5vp"
                ohos:width="match_parent"
                ohos:align_left="$id:item_pro_image"
                ohos:background_element="#EAEAEC"
                />
        </DependentLayout>
</DirectionalLayout>