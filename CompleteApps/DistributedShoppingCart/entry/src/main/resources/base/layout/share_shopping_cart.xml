<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:shoping_list"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:height="80px"
        ohos:width="match_parent"
        ohos:margin="10px">
        <Text
            ohos:height="80px"
            ohos:width="300px"
            ohos:id="$+id:myshopping_cart"
            ohos:text="$string:shopping_cart_slice"
            ohos:start_margin="20px"
            ohos:end_margin="0px"
            ohos:text_size="20vp"
            ohos:weight="6vp"
            />
        <Image
            ohos:id="$+id:share_shoping_cart"
            ohos:height="72px"
            ohos:width="72px"
            ohos:image_src="$media:icon_share"
            ohos:right_of="$id:myshopping_cart"
            ohos:start_margin="500px"
            ohos:end_margin="0px"/>
        <Image
            ohos:id="$+id:distribute_shoping_cart"
            ohos:height="72px"
            ohos:width="72px"
            ohos:start_margin="60px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_fengbu"
            ohos:right_of="$id:share_shoping_cart"/>
    </DependentLayout>

    <Component
        ohos:width="match_parent"
        ohos:height="0.5vp"
        ohos:background_element="#FFE2E2EE"
        />
    <StackLayout
        ohos:weight="1"
        ohos:height="1740px"
        ohos:width="match_parent">
            <Text
                ohos:height="200px"
                ohos:width="match_parent"
                ohos:id="$+id:empty_shopingcart"
                ohos:text_size="18vp"
                ohos:weight="6vp"
                ohos:multiple_lines="true"
                ohos:text="$string:cart_empty_info"/>
            <ScrollView
                ohos:id="$+id:list_pro"
                ohos:height="match_parent"
                ohos:width="match_parent">
                <ListContainer
                    ohos:id="$+id:shopingcart_container"
                    ohos:width="match_parent"
                    ohos:height="match_parent"/>
            </ScrollView>
    </StackLayout>
    <DependentLayout
        ohos:height="200px"
        ohos:width="match_parent"
        ohos:start_padding="20px"
        ohos:end_padding="20px"
        ohos:background_element="#FAFAFA"
        ohos:alignment="center"
        ohos:align_parent_bottom="true">
        <Image
            ohos:id="$+id:rb_select_all"
            ohos:height="54px"
            ohos:width="54px"
            ohos:start_margin="20px"
            ohos:end_margin="0px"
            ohos:top_margin="50px"
            ohos:image_src="$media:icon_select"/>
        <Text
            ohos:height="160px"
            ohos:width="100px"
            ohos:id="$+id:select_all_title"
            ohos:text="$string:select_all_label"
            ohos:start_margin="30px"
            ohos:end_margin="0px"
            ohos:right_of="$id:rb_select_all"
            ohos:text_alignment="center"
            ohos:text_size="14vp"
            ohos:weight="4"/>
        <Text
            ohos:id="$+id:total_money"
            ohos:width="460px"
            ohos:height="160px"
            ohos:text_alignment="center"
            ohos:start_margin="50px"
            ohos:end_margin="0px"
            ohos:right_of="$id:select_all_title"
            ohos:text_size="16vp"
            ohos:text="$string:total_0_label"
            ohos:weight="6"/>
        <Text
            ohos:id="$+id:to_pay_money"
            ohos:width="390px"
            ohos:height="160px"
            ohos:background_element="$graphic:corner_bg_comment"
            ohos:text_alignment="center"
            ohos:start_margin="50px"
            ohos:end_margin="0px"
            ohos:right_of="$id:total_money"
            ohos:text_color="white"
            ohos:text_size="20vp"
            ohos:text="$string:settle_accounts_label"
            ohos:weight="6"/>
    </DependentLayout>
</DirectionalLayout>