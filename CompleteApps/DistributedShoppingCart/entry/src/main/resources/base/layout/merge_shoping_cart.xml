<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:merge_shoping_list"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:height="80px"
        ohos:width="match_parent"
        ohos:margin="10px">
        <Text
            ohos:height="80px"
            ohos:width="300px"
            ohos:id="$+id:myshopping_cart"
            ohos:text="$string:shopping_cart_slice"
            ohos:start_margin="20px"
            ohos:end_margin="0px"
            ohos:text_size="20vp"
            ohos:weight="6vp"
            />
        <Image
            ohos:id="$+id:share_shopingcart"
            ohos:height="72px"
            ohos:width="72px"
            ohos:image_src="$media:icon_share"
            ohos:right_of="$id:myshopping_cart"
            ohos:start_margin="500px"
            ohos:end_margin="0px"/>
        <Image
            ohos:id="$+id:distribute_shopingcart"
            ohos:height="72px"
            ohos:width="72px"
            ohos:start_margin="60px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_fengbu"
            ohos:right_of="$id:share_shopingcart"/>
    </DependentLayout>

    <Component
        ohos:width="match_parent"
        ohos:height="0.5vp"
        ohos:background_element="#FFE2E2EE"
        />
    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical"
        ohos:weight="1">
    <ListContainer
        ohos:id="$+id:my_container"
        ohos:width="match_parent"
        ohos:height="800px"
        />

    <Text
        ohos:width="match_parent"
        ohos:id="$+id:merge_dev_name"
        ohos:height="35px"
        ohos:text="$string:xiaowang_shopping_cart"
        ohos:weight="4"
        ohos:text_size="16vp"
        />

    <ListContainer
        ohos:id="$+id:someone_container"
        ohos:top_margin="30px"
        ohos:width="match_parent"
        ohos:height="800px"/>
    </DirectionalLayout>
    <DirectionalLayout
        ohos:height="500px"
        ohos:width="match_parent"
        ohos:background_element="#FAFAFA"
        ohos:orientation="vertical"
        ohos:align_parent_bottom="true">
        <DependentLayout
            ohos:height="100px"
            ohos:top_margin="20px"
            ohos:width="match_parent"
            ohos:id="$+id:discount_detatil">
        <Text
            ohos:id="$+id:merge_total_money"
            ohos:width="450px"
            ohos:height="60px"
            ohos:text_alignment="left"
            ohos:start_margin="50px"
            ohos:end_margin="0px"
            ohos:text_size="18vp"
            ohos:text="$string:total_0_label"
            ohos:text_color="#F93737"
            ohos:weight="4"/>
        <Text
            ohos:id="$+id:merge_total_discount"
            ohos:width="400px"
            ohos:height="60px"
            ohos:text_alignment="left"
            ohos:start_margin="80px"
            ohos:end_margin="0px"
            ohos:right_of="$id:merge_total_money"
            ohos:text_size="14vp"
            ohos:text="$string:discount_0label"
            ohos:text_color="#F93737"
            ohos:weight="4"/>
        <Image
            ohos:id="$+id:merge_discount_detail"
            ohos:height="50px"
            ohos:width="50px"
            ohos:top_margin="10px"
            ohos:start_margin="30px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_mingxi"
            ohos:right_of="$id:merge_total_discount"
            />
        </DependentLayout>
        <DependentLayout
            ohos:height="100px"
            ohos:width="match_parent">
        <Text
            ohos:id="$+id:merge_total_my_money"
            ohos:width="450px"
            ohos:height="60px"
            ohos:below="$id:merge_total_money"
            ohos:text_alignment="left"
            ohos:start_margin="50px"
            ohos:end_margin="0px"
            ohos:text_size="18vp"
            ohos:text="$string:my_0_label"
            ohos:text_color="#F93737"
            ohos:weight="4"/>
        <Text
            ohos:id="$+id:merge_total_my_price"
            ohos:width="290px"
            ohos:height="60px"
            ohos:text_alignment="left"
            ohos:start_margin="240px"
            ohos:end_margin="0px"
            ohos:end_of="$id:merge_total_my_money"
            ohos:below="$id:merge_total_discount"
            ohos:text_size="14vp"
            ohos:text="$string:original_price_0_label"
            ohos:text_color="#AAAAAA"
            ohos:weight="4"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="100px"
            ohos:width="match_parent">
        <Text
            ohos:id="$+id:merge_total_some_money"
            ohos:width="450px"
            ohos:height="60px"
            ohos:below="$id:merge_total_my_money"
            ohos:text_alignment="left"
            ohos:start_margin="50px"
            ohos:end_margin="0px"
            ohos:text_size="18vp"
            ohos:text="$string:xiaowang_0_label"
            ohos:text_color="#F93737"
            ohos:weight="4"/>
        <Text
            ohos:id="$+id:merge_total_some_price"
            ohos:width="290px"
            ohos:height="60px"
            ohos:text_alignment="left"
            ohos:start_margin="240px"
            ohos:end_margin="0px"
            ohos:end_of="$id:merge_total_some_money"
            ohos:below="$id:merge_total_my_price"
            ohos:text_size="14vp"
            ohos:text="$string:original_price_0_label"
            ohos:text_color="#AAAAAA"
            ohos:weight="4"/>
        </DependentLayout>
        <DependentLayout
            ohos:top_margin="20px"
            ohos:height="match_parent"
            ohos:width="match_parent">
            <Image
                ohos:id="$+id:merge_select_all"
                ohos:height="54px"
                ohos:width="54px"
                ohos:start_margin="90px"
                ohos:end_margin="0px"
                ohos:top_margin="60px"
                ohos:image_src="$media:icon_select"/>
            <Text
                ohos:height="60px"
                ohos:width="150px"
                ohos:id="$+id:select_all_title"
                ohos:text="$string:select_all_label"
                ohos:start_margin="30px"
                ohos:end_margin="0px"
                ohos:top_margin="45px"
                ohos:right_of="$id:merge_select_all"
                ohos:text_size="14vp"
                ohos:weight="4"/>
            <Text
                ohos:id="$+id:merge_to_pay_money"
                ohos:width="300px"
                ohos:height="140px"
                ohos:background_element="$graphic:corner_bg_comment"
                ohos:text_alignment="center"
                ohos:start_margin="400px"
                ohos:end_margin="0px"
                ohos:top_margin="20px"
                ohos:right_of="$id:select_all_title"
                ohos:text_color="white"
                ohos:text_size="20vp"
                ohos:text="$string:settle_accounts_0_label"
                ohos:weight="6"/>
        </DependentLayout>
    </DirectionalLayout>
</DirectionalLayout>