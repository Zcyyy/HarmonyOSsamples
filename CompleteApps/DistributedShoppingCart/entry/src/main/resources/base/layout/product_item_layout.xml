<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="110vp"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:padding="5px">

        <Image
            ohos:id="$+id:item_news_image"
            ohos:height="360px"
            ohos:width="360px"
            ohos:margin="10px"
            ohos:scale_mode="inside"/>
        <Text
            ohos:id="$+id:item_news_title"
            ohos:height="match_content"
            ohos:width="700px"
            ohos:right_of="$id:item_news_image"
            ohos:max_text_lines="2"
            ohos:multiple_lines="true"
            ohos:text_size="14vp"
            ohos:weight="4"/>
        <Text
            ohos:id="$+id:item_news_param"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:item_news_title"
            ohos:right_of="$id:item_news_image"
            ohos:text_size="12vp"
            ohos:weight="2"/>
        <Text
            ohos:id="$+id:item_news_param2"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:item_news_param"
            ohos:right_of="$id:item_news_image"
            ohos:text_color="#FFCBCBD2"
            ohos:text_size="12vp"
            ohos:weight="2"/>
        <Text
            ohos:id="$+id:item_news_price"
            ohos:height="match_content"
            ohos:width="240px"
            ohos:below="$id:item_news_param2"
            ohos:right_of="$id:item_news_image"
            ohos:text_color="red"
            ohos:text_size="16vp"
            ohos:weight="4"/>
        <Text
            ohos:id="$+id:item_news_discount"
            ohos:height="match_content"
            ohos:width="200px"
            ohos:below="$id:item_news_price"
            ohos:right_of="$id:item_news_image"
            ohos:background_element="$graphic:corner_bg_text"
            ohos:start_padding="5px"
            ohos:end_padding="0px"
            ohos:text_color="red"
            ohos:text_size="12vp"
            ohos:weight="3"/>
        <Component
            ohos:height="0.5vp"
            ohos:width="match_parent"
            ohos:align_left="$id:item_news_image"
            ohos:background_element="#EAEAEC"
            />
    </DependentLayout>
</DirectionalLayout>