<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical">
    <DependentLayout
        ohos:height="100px"
        ohos:width="match_parent"
        ohos:margin="10px">
        <Text
            ohos:height="100px"
            ohos:width="400px"
            ohos:id="$+id:pay_succ"
            ohos:text="$string:pay_success_label"
            ohos:start_margin="20px"
            ohos:end_margin="0px"
            ohos:text_size="20vp"
            ohos:weight="6vp"
            />
        <Text
            ohos:height="100px"
            ohos:width="match_parent"
            ohos:id="$+id:to_first_slice"
            ohos:text="$string:finish_label"
            ohos:right_of="$+id:pay_succ"
            ohos:start_margin="480px"
            ohos:end_margin="0px"
            ohos:text_size="14vp"
            ohos:weight="4vp"
            />
    </DependentLayout>
    <Component
        ohos:top_margin="20px"
        ohos:width="match_parent"
        ohos:height="0.5vp"
        ohos:background_element="#FFE2E2EE"
        />
    <Image
        ohos:top_margin="100px"
        ohos:height="372px"
        ohos:width="372px"
        ohos:image_src="$media:icon_succced"
        ohos:layout_alignment="center"
        />
    <Text
        ohos:height="100px"
        ohos:width="match_parent"
        ohos:top_margin="50px"
        ohos:text="$string:pay_success_label"
        ohos:text_alignment="center"
        ohos:text_size="14vp"
        ohos:weight="4vp"
        />
</DirectionalLayout>