<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:detail_merge_dialog"
    ohos:background_element="$graphic:background_dialog"
    ohos:height="1500px"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:layout_alignment="horizontal_center">

    <Image
        ohos:id="$+id:share_merge_icon_cancel"
        ohos:width="72px"
        ohos:height="72px"
        ohos:top_margin="40px"
        ohos:start_margin="950px"
        ohos:end_margin="0px"
        ohos:image_src="$media:icon_cancel"/>
    <Text
        ohos:text_size="20vp"
        ohos:weight="6vp"
        ohos:height="100px"
        ohos:start_margin="440px"
        ohos:end_margin="0px"
        ohos:width="match_content"
        ohos:text="$string:amount_details"
        ohos:text_alignment="center"/>
    <Text
        ohos:height="50px"
        ohos:width="1080px"
        ohos:text="$string:amount_notice_info"
        ohos:text_alignment="center"
        ohos:top_margin="30px"
        ohos:start_margin="30px"
        ohos:end_margin="0px"
        ohos:text_size="12vp"
        ohos:weight="4vp"/>
    <DirectionalLayout
        ohos:weight="1"
        ohos:height="500px"
        ohos:orientation="vertical"
        ohos:width="match_parent">
        <DependentLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:margin="10px">
            <Text
                ohos:height="60px"
                ohos:width="400px"
                ohos:id="$+id:head_text1"
                ohos:text="$string:goods_prices_label"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:top_margin="30px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                />
            <Text
                ohos:id="$+id:text1"
                ohos:height="80px"
                ohos:width="200px"
                ohos:top_margin="30px"
                ohos:start_margin="400px"
                ohos:end_margin="0px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                ohos:text_color="red"
                ohos:text="$string:RMB01"
                ohos:right_of="$id:head_text1"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:margin="10px">
            <Text
                ohos:height="60px"
                ohos:width="400px"
                ohos:id="$+id:head_text2"
                ohos:text="$string:discount_label"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:top_margin="30px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                />
            <Text
                ohos:id="$+id:text2"
                ohos:height="80px"
                ohos:width="200px"
                ohos:top_margin="30px"
                ohos:start_margin="400px"
                ohos:end_margin="0px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                ohos:text_color="red"
                ohos:text="$string:RMB02"
                ohos:right_of="$id:head_text2"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:margin="10px">
            <Text
                ohos:height="60px"
                ohos:width="400px"
                ohos:id="$+id:head_text3"
                ohos:text="$string:total_label"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:top_margin="30px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                />
            <Text
                ohos:id="$+id:text3"
                ohos:height="80px"
                ohos:width="200px"
                ohos:top_margin="30px"
                ohos:start_margin="400px"
                ohos:end_margin="0px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                ohos:text="$string:RMB01"
                ohos:right_of="$id:head_text3"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:margin="10px">
            <Text
                ohos:height="60px"
                ohos:width="400px"
                ohos:id="$+id:head_text4"
                ohos:text="$string:my_label"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:top_margin="30px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                />
            <Text
                ohos:id="$+id:text4"
                ohos:height="80px"
                ohos:width="200px"
                ohos:top_margin="30px"
                ohos:start_margin="400px"
                ohos:end_margin="0px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                ohos:text="$string:RMB01"
                ohos:right_of="$id:head_text4"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="120px"
            ohos:width="match_parent"
            ohos:margin="10px">
            <Text
                ohos:height="60px"
                ohos:width="400px"
                ohos:id="$+id:head_text5"
                ohos:text="$string:xiaowang_label"
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:top_margin="30px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                />
            <Text
                ohos:id="$+id:text5"
                ohos:height="80px"
                ohos:width="200px"
                ohos:top_margin="30px"
                ohos:start_margin="400px"
                ohos:end_margin="0px"
                ohos:text_size="14vp"
                ohos:weight="4vp"
                ohos:text="$string:RMB01"
                ohos:right_of="$id:head_text5"/>
        </DependentLayout>
    </DirectionalLayout>
    <Component
        ohos:width="match_parent"
        ohos:height="0.5vp"
        ohos:background_element="#FFE2E2EE"
        />
    <DirectionalLayout
        ohos:height="500px"
        ohos:width="match_parent"
        ohos:background_element="#FAFAFA"
        ohos:orientation="vertical"
        ohos:align_parent_bottom="true">
        <DependentLayout
            ohos:height="100px"
            ohos:top_margin="20px"
            ohos:width="match_parent"
            ohos:id="$+id:discount_detatil">
            <Text
                ohos:id="$+id:merge_total_money"
                ohos:width="450px"
                ohos:height="60px"
                ohos:text_alignment="left"
                ohos:start_margin="50px"
                ohos:end_margin="0px"
                ohos:text_size="18vp"
                ohos:text="$string:total_0_label"
                ohos:text_color="#F93737"
                ohos:weight="4"/>
            <Text
                ohos:id="$+id:merge_total_discount"
                ohos:width="400px"
                ohos:height="60px"
                ohos:text_alignment="left"
                ohos:start_margin="80px"
                ohos:end_margin="0px"
                ohos:right_of="$id:merge_total_money"
                ohos:text_size="14vp"
                ohos:text="$string:discount_0label"
                ohos:text_color="#F93737"
                ohos:weight="4"/>
            <Image
                ohos:id="$+id:merge_discount_detail"
                ohos:height="50px"
                ohos:width="50px"
                ohos:top_margin="10px"
                ohos:start_margin="30px"
                ohos:end_margin="0px"
                ohos:image_src="$media:icon_mingxi"
                ohos:right_of="$id:merge_total_discount"
                />
        </DependentLayout>
        <DependentLayout
            ohos:height="100px"
            ohos:width="match_parent">
            <Text
                ohos:id="$+id:merge_total_my_money"
                ohos:width="450px"
                ohos:height="60px"
                ohos:below="$id:merge_total_money"
                ohos:text_alignment="left"
                ohos:start_margin="50px"
                ohos:end_margin="0px"
                ohos:text_size="18vp"
                ohos:text="$string:my_0_label"
                ohos:text_color="#F93737"
                ohos:weight="4"/>
            <Text
                ohos:id="$+id:merge_total_my_price"
                ohos:width="290px"
                ohos:height="60px"
                ohos:text_alignment="left"
                ohos:start_margin="240px"
                ohos:end_margin="0px"
                ohos:end_of="$id:merge_total_my_money"
                ohos:below="$id:merge_total_discount"
                ohos:text_size="14vp"
                ohos:text="$string:original_price_0_label"
                ohos:text_color="#AAAAAA"
                ohos:weight="4"/>
        </DependentLayout>
        <DependentLayout
            ohos:height="100px"
            ohos:width="match_parent">
            <Text
                ohos:id="$+id:merge_total_some_money"
                ohos:width="450px"
                ohos:height="60px"
                ohos:below="$id:merge_total_my_money"
                ohos:text_alignment="left"
                ohos:start_margin="50px"
                ohos:end_margin="0px"
                ohos:text_size="18vp"
                ohos:text="$string:xiaowang_0_label"
                ohos:text_color="#F93737"
                ohos:weight="4"/>
            <Text
                ohos:id="$+id:merge_total_some_price"
                ohos:width="290px"
                ohos:height="60px"
                ohos:text_alignment="left"
                ohos:start_margin="240px"
                ohos:end_margin="0px"
                ohos:end_of="$id:merge_total_some_money"
                ohos:below="$id:merge_total_my_price"
                ohos:text_size="14vp"
                ohos:text="$string:original_price_0_label"
                ohos:text_color="#AAAAAA"
                ohos:weight="4"/>
        </DependentLayout>
        <DependentLayout
            ohos:top_margin="20px"
            ohos:height="match_parent"
            ohos:width="match_parent">
            <Image
                ohos:id="$+id:merge_select_all"
                ohos:height="54px"
                ohos:width="54px"
                ohos:start_margin="90px"
                ohos:end_margin="0px"
                ohos:top_margin="60px"
                ohos:image_src="$media:icon_select"/>
            <Text
                ohos:height="60px"
                ohos:width="150px"
                ohos:id="$+id:select_all_title"
                ohos:text="$string:select_all_label"
                ohos:start_margin="30px"
                ohos:end_margin="0px"
                ohos:top_margin="45px"
                ohos:right_of="$id:merge_select_all"
                ohos:text_size="14vp"
                ohos:weight="4"/>
            <Text
                ohos:id="$+id:merge_to_pay_money"
                ohos:width="300px"
                ohos:height="140px"
                ohos:background_element="$graphic:corner_bg_comment"
                ohos:text_alignment="center"
                ohos:start_margin="400px"
                ohos:end_margin="0px"
                ohos:top_margin="20px"
                ohos:right_of="$id:select_all_title"
                ohos:text_color="white"
                ohos:text_size="20vp"
                ohos:text="$string:settle_accounts_0_label"
                ohos:weight="6"/>
        </DependentLayout>
    </DirectionalLayout>
</DirectionalLayout>