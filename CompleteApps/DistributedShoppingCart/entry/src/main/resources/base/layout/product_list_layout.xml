<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:id="$+id:main_layout"
        ohos:orientation="vertical">
    <Image
        ohos:id="$+id:img_advertisement"
        ohos:height="450px"
        ohos:width="1080px"
        ohos:image_src="$media:banner"/>
    <ScrollView
        ohos:id="$+id:scr_container"
        ohos:height="800px"
        ohos:width="match_parent"
        ohos:rebound_effect="true"
        ohos:scrollbar_color="#EAEAEC"
        ohos:weight="1">
        <ListContainer
                ohos:id="$+id:news_container"
                ohos:width="match_parent"
                ohos:height="match_parent"/>
    </ScrollView>
    <DirectionalLayout
        ohos:top_padding="20px"
        ohos:height="120px"
        ohos:width="match_parent"
        ohos:alignment="horizontal_center"
        ohos:background_element="#FAFAFA"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal">
        <Image
            ohos:height="72px"
            ohos:width="72px"
            ohos:start_margin="30px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_home_select"/>
        <Image
            ohos:height="72px"
            ohos:width="72px"
            ohos:start_margin="145px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_fenglei"/>
        <Image
            ohos:height="72px"
            ohos:width="72px"
            ohos:start_margin="145px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_faxian"/>
        <StackLayout
            ohos:height="match_parent"
            ohos:width="100px"
            ohos:id="$+id:car_shoppingcart"
            ohos:start_margin="145px"
            ohos:end_margin="0px">
            <Text
                ohos:id="$+id:cart_num"
                ohos:height="40px"
                ohos:width="40px"
                ohos:text=""
                ohos:start_margin="20px"
                ohos:end_margin="0px"
                ohos:text_color="red"
                ohos:background_element="$graphic:red_circel_button"
                ohos:text_alignment="center"
                ohos:text_size="10vp"
                ohos:weight="6vp"/>
                <Image
                    ohos:id="$+id:car_cart"
                    ohos:top_margin="10px"
                    ohos:height="72px"
                    ohos:width="72px"
                    ohos:image_src="$media:icon_gouwuche_bot"/>
        </StackLayout>
        <Image
            ohos:height="72px"
            ohos:width="72px"
            ohos:start_margin="145px"
            ohos:end_margin="0px"
            ohos:image_src="$media:icon_me"/>
    </DirectionalLayout>
</DirectionalLayout>