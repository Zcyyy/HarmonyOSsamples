<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:width="match_parent"
                   ohos:height="match_parent">

    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent">

            <DirectionalLayout
                ohos:id="$+id:directional_bluetooth"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:top_margin="20vp">

                <Text
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text="$string:bluetooth"
                    ohos:text_size="18fp"
                    ohos:text_color="#2B3FD2"
                    ohos:start_margin="20vp"
                    ohos:end_margin="0vp"
                    ohos:text_alignment="left"
                    ohos:weight="1"/>

                <Switch
                    ohos:id="$+id:bt_switch"
                    ohos:width="50vp"
                    ohos:height="20vp"
                    ohos:text_alignment="right"
                    ohos:start_margin="0vp"
                    ohos:end_margin="20vp"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:top_margin="20vp">

                <Text
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text="$string:bluetooth_status"
                    ohos:text_size="18fp"
                    ohos:text_color="#2B3FD2"
                    ohos:start_margin="20vp"
                    ohos:end_margin="0vp"
                    ohos:text_alignment="left"
                    ohos:weight="1"/>

                <Text
                    ohos:id="$+id:bluetooth_status"
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text_size="18fp"
                    ohos:text_color="#2B3FD2"
                    ohos:start_margin="0vp"
                    ohos:end_margin="20vp"
                    ohos:text_alignment="right"
                    ohos:weight="1"/>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:container_lists"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:visibility="hide">

                <DirectionalLayout
                    ohos:height="match_content"
                    ohos:width="match_parent"
                    ohos:top_margin="20vp"
                    ohos:bottom_margin="20vp">

                    <Button
                        ohos:id="$+id:btn_start_discovery"
                        ohos:width="250vp"
                        ohos:height="50vp"
                        ohos:text="$string:btn_start_discovery"
                        ohos:text_size="20fp"
                        ohos:text_color="#FFFFFF"
                        ohos:margin="20vp"
                        ohos:padding="15vp"
                        ohos:layout_alignment="center"
                        ohos:background_element="#2B3FD2"/>
                </DirectionalLayout>

                <DirectionalLayout
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:orientation="horizontal"
                    ohos:top_margin="20vp">

                    <Text
                        ohos:width="match_parent"
                        ohos:height="match_content"
                        ohos:text="$string:title_available_devices"
                        ohos:text_size="18fp"
                        ohos:text_color="#2B3FD2"
                        ohos:start_margin="20vp"
                        ohos:end_margin="0vp"
                        ohos:weight="1"/>

                    <DirectionalLayout
                        ohos:width="match_parent"
                        ohos:height="match_content"
                        ohos:weight="1">

                        <RoundProgressBar
                            ohos:id="$+id:progressbar"
                            ohos:height="24vp"
                            ohos:width="24vp"
                            ohos:visibility="hide"
                            ohos:layout_alignment="right|vertical_center"
                            ohos:start_margin="0vp"
                            ohos:end_margin="20vp"
                            ohos:progress_color="#2B3FD2"
                            ohos:progress_width="2vp"/>
                    </DirectionalLayout>
                </DirectionalLayout>

                <ListContainer
                    ohos:id="$+id:list_available_devices"
                    ohos:width="match_parent"
                    ohos:height="200vp"
                    ohos:start_margin="30vp"
                    ohos:end_margin="0vp"
                    ohos:top_margin="20vp"/>

                <Text
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text="$string:title_paired_devices"
                    ohos:text_size="18fp"
                    ohos:text_color="#2B3FD2"
                    ohos:start_margin="20vp"
                    ohos:end_margin="0vp"/>

                <ListContainer
                    ohos:id="$+id:list_paired_devices"
                    ohos:width="match_parent"
                    ohos:height="300vp"
                    ohos:start_margin="30vp"
                    ohos:end_margin="0vp"
                    ohos:top_margin="20vp"/>

            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>
</DirectionalLayout>